{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "lib": ["dom", "es2015"],

    "declaration": true,

    "outDir": "built",
    
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
